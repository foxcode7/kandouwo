<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showTitle|showHome|homeAsUp</item>
        <item name="background">@drawable/bg_actionbar</item>
        <item name="icon">@drawable/ic_action_home</item>
        <item name="titleTextStyle">@style/TextAppearance.ActionBar.Title</item>
        <item name="indeterminateProgressStyle">@style/ActionBar.IndeterminateProgress</item>
    </style>

    <style name="Widget.ActionBarTab" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>
    </style>

    <style name="Widget.ActionBarTabBar" parent="@style/Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:background">@drawable/tab_unselected</item>
    </style>

    <style name="Widget.ActionBarTabText" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/actionbar_tab_text_selector</item>
    </style>

    <style name="Widget.EditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/text_size_h5</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:background">@drawable/bg_edit_selector</item>
        <item name="android:textColorHint">@color/black4</item>
    </style>

    <style name="Widget.RatingBar.Large" parent="android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_star_large</item>
        <item name="android:minHeight">29dp</item>
        <item name="android:maxHeight">29dp</item>
    </style>

    <style name="Widget.RatingBar.Small" parent="android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_star_small</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="BottomTab" parent="android:Widget.TextView">
        <!--<item name="android:textAppearance">?android:textAppearanceSmall</item>-->
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textSize">@dimen/text_size_h10</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_bottom_tab</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/code_flash_selector</item>

    </style>

